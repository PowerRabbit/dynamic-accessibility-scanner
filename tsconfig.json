{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "outDir": "build",
      "removeComments": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": ["node"],
      "typeRoots": ["node_modules/@types"],
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "incremental": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
  }
